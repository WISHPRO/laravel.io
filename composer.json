{
    "name": "laravelio/laravelio",
    "description": "Laravel.io",
    "license": "MIT",
    "require": {
        "laravel/framework": "4.1.*",
        "artdarek/oauth-4-laravel": "1.0.*",
        "barryvdh/laravel-debugbar": "~1.6",
        "mccool/laravel-auto-presenter": "~1.1",
        "mccool/database-backup": "~1.0",
        "michelf/php-markdown": "1.4.*@dev",
        "nickcernis/html-to-markdown": "~2.1",
        "misd/linkify": "1.1.*",
        "hashids/hashids": "0.3.*@dev"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "raveren/kint": "~0.9",
        "codeception/codeception": "~2.0",
        "codeception/aspect-mock": "0.5.*@beta"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/database/migrations",
            "app/database/seeds",
            "tests/unit/UnitTestCase.php"
        ],
        "psr-4": {
            "Lio\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [

        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
